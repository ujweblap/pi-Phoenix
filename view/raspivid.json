{
	"width": {
		"type": "Number",
		"max": 1920,
		"info": "Integer or String - Set image width (Default is 1920)",
		"default": 1920
	},
	"height": {
		"type": "Number",
		"info": "Integer or String - Set image height (Default is 1080)",
		"max": 1080,
		"default": 1080
	},
	"bitrate": {
		"type": "Number",
		"info": "Integer or String - Set bitrate. Use bits per second (e.g. 10MBits/s would be 10000000)"
	},
	"timeout": {
		"type": "Number",
		"info": "Integer or String - Time (in ms) to capture for. If not specified, set to 5s. Zero to disable",
		"disabled": 0,
		"default": 5000
	},
	"framerate": {
		"type": "Number",
		"info": "Integer or String - Specify the frames per second to record."
	},
	"intra": {
		"type": "Number",
		"info": "Integer or String - Specify the intra refresh period (key frame rate/GoP size)"
	},
	"fullscreen": {
		"type": "Checkbox",
		"info": "Fullscreen preview mode"
	},
	"preview": {
		"type": "Preview",
		"info": "Preview window settings <\"x,y,w,h\">"
	},
